<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Upload File - Ikat Digital</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      .password-toggle {
        cursor: pointer;
      }
      .password-strength {
        font-size: 0.8rem;
        margin-top: 5px;
      }
      .strength-weak {
        color: #dc3545;
      }
      .strength-medium {
        color: #ffc107;
      }
      .strength-strong {
        color: #28a745;
      }
    </style>
  </head>
  <body class="bg-dark text-light d-flex align-items-center min-vh-100">
    <div class="container">
      <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
          <a href="/" class="text-light text-decoration-none">
            <h1 class="fw-bold mb-2">Ikat Digital</h1>
          </a>
          <p class="text-secondary">
            Send files without login â€” automatically deleted after download
          </p>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card bg-dark text-light border-secondary shadow-sm">
            <div class="card-body p-4">
              <h4 class="text-center mb-4">
                <i class="bi bi-cloud-upload"></i> Upload File
              </h4>

              <form
                id="uploadForm"
                action="/upload"
                method="POST"
                enctype="multipart/form-data"
              >
                <!-- File Selection -->
                <div class="mb-3">
                  <label class="form-label">
                    <i class="bi bi-file-earmark"></i> Choose File
                  </label>
                  <input
                    type="file"
                    name="file"
                    class="form-control bg-dark text-light border-secondary"
                    required
                    onchange="validateSize(this)"
                  />
                  <div class="form-text text-secondary">
                    Maximum file size: 50GB
                  </div>
                </div>

                <!-- Password Protection -->
                <div class="mb-3">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <label class="form-label">
                      <i class="bi bi-shield-lock"></i> Password Protection
                      <span class="text-secondary">(Optional)</span>
                    </label>
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="enablePassword"
                        onchange="togglePassword()"
                      />
                      <label
                        class="form-check-label text-secondary"
                        for="enablePassword"
                      >
                        Enable
                      </label>
                    </div>
                  </div>

                  <div id="passwordContainer" style="display: none">
                    <div class="input-group">
                      <input
                        type="password"
                        name="password"
                        id="passwordInput"
                        class="form-control bg-dark text-light border-secondary"
                        placeholder="Enter password to protect your file"
                        oninput="checkPasswordStrength()"
                      />
                      <button
                        class="btn btn-outline-secondary password-toggle"
                        type="button"
                        onclick="togglePasswordVisibility()"
                        id="passwordToggle"
                      >
                        <i class="bi bi-eye"></i>
                      </button>
                    </div>
                    <div id="passwordStrength" class="password-strength"></div>
                    <div class="form-text text-secondary">
                      <i class="bi bi-info-circle"></i>
                      Recipients will need this password to download the file
                    </div>
                  </div>
                </div>

                <!-- Note -->
                <div class="mb-3">
                  <label class="form-label">
                    <i class="bi bi-chat-text"></i> Note (optional)
                  </label>
                  <textarea
                    name="note"
                    class="form-control bg-dark text-light border-secondary"
                    rows="2"
                    placeholder="Write a message for the recipient..."
                  ></textarea>
                </div>

                <!-- Expiry Settings -->
                <div class="row mb-3">
                  <div class="col-md-6">
                    <label class="form-label">
                      <i class="bi bi-clock"></i> File Expiry Time
                    </label>
                    <select
                      name="expiresIn"
                      class="form-select bg-dark text-light border-secondary"
                    >
                      <option value="30m">30 Minutes</option>
                      <option value="1h">1 Hour</option>
                      <option value="1d" selected>1 Day</option>
                      <option value="7d">7 Days</option>
                      <option value="30d">30 Days</option>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">
                      <i class="bi bi-download"></i> Download Policy
                    </label>
                    <select
                      name="deleteAfterDownload"
                      class="form-select bg-dark text-light border-secondary"
                    >
                      <option value="yes">Delete after 1 download</option>
                      <option value="no">Allow multiple downloads</option>
                    </select>
                  </div>
                </div>

                <!-- Upload Button -->
                <button
                  id="submitBtn"
                  type="submit"
                  class="btn btn-primary w-100"
                >
                  <i class="bi bi-send"></i> Send File
                </button>

                <!-- Loading Spinner -->
                <div
                  id="loading"
                  class="text-center mt-3"
                  style="display: none"
                >
                  <div class="spinner-border text-light" role="status"></div>
                  <p class="mt-2 text-secondary">
                    Uploading file, please wait...
                  </p>
                </div>
              </form>
            </div>
          </div>

          <!-- Security Features Info -->
          <div class="mt-3 text-center">
            <small class="text-secondary">
              <i class="bi bi-shield-check"></i>
              Files are encrypted and automatically deleted after expiry.
              <br />
              <i class="bi bi-eye-slash"></i>
              Password-protected files are extra secure.
            </small>
          </div>
        </div>
      </div>
    </div>

    <script>
      function validateSize(input) {
        const file = input.files[0];
        if (file && file.size > 50 * 1024 * 1024 * 1024) {
          alert("The selected file exceeds the 50GB limit.");
          input.value = "";
        }
      }

      function togglePassword() {
        const container = document.getElementById("passwordContainer");
        const checkbox = document.getElementById("enablePassword");
        const passwordInput = document.getElementById("passwordInput");

        if (checkbox.checked) {
          container.style.display = "block";
          passwordInput.required = true;
        } else {
          container.style.display = "none";
          passwordInput.required = false;
          passwordInput.value = "";
          document.getElementById("passwordStrength").innerHTML = "";
        }
      }

      function togglePasswordVisibility() {
        const passwordInput = document.getElementById("passwordInput");
        const toggleButton = document.getElementById("passwordToggle");
        const icon = toggleButton.querySelector("i");

        if (passwordInput.type === "password") {
          passwordInput.type = "text";
          icon.className = "bi bi-eye-slash";
        } else {
          passwordInput.type = "password";
          icon.className = "bi bi-eye";
        }
      }

      function checkPasswordStrength() {
        const password = document.getElementById("passwordInput").value;
        const strengthDiv = document.getElementById("passwordStrength");

        if (password.length === 0) {
          strengthDiv.innerHTML = "";
          return;
        }

        let strength = 0;
        let feedback = [];

        // Length check
        if (password.length >= 8) strength++;
        else feedback.push("at least 8 characters");

        // Character variety checks
        if (/[a-z]/.test(password)) strength++;
        else feedback.push("lowercase letters");

        if (/[A-Z]/.test(password)) strength++;
        else feedback.push("uppercase letters");

        if (/[0-9]/.test(password)) strength++;
        else feedback.push("numbers");

        if (/[^A-Za-z0-9]/.test(password)) strength++;
        else feedback.push("special characters");

        let strengthText = "";
        let strengthClass = "";

        if (strength < 2) {
          strengthText = "ðŸ”´ Weak password";
          strengthClass = "strength-weak";
        } else if (strength < 4) {
          strengthText = "ðŸŸ¡ Medium password";
          strengthClass = "strength-medium";
        } else {
          strengthText = "ðŸŸ¢ Strong password";
          strengthClass = "strength-strong";
        }

        if (feedback.length > 0 && strength < 4) {
          strengthText += ` - Add: ${feedback.join(", ")}`;
        }

        strengthDiv.innerHTML = `<span class="${strengthClass}">${strengthText}</span>`;
      }

      const form = document.getElementById("uploadForm");
      const loading = document.getElementById("loading");
      const submitBtn = document.getElementById("submitBtn");

      form.addEventListener("submit", (e) => {
        const enablePassword =
          document.getElementById("enablePassword").checked;
        const passwordInput = document.getElementById("passwordInput");

        if (enablePassword && passwordInput.value.trim() === "") {
          e.preventDefault();
          alert("Please enter a password or disable password protection.");
          return;
        }

        loading.style.display = "block";
        submitBtn.disabled = true;
      });
    </script>
  </body>
</html>
